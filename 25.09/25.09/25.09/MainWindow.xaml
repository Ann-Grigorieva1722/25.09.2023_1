<Window x:Class="_25._09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_25._09"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="QuestionTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="480" Height="100"/>
        <Button Content="Получить ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="50" Margin="10,120,0,0" Click="GetAnswerButton_Click"/>
        <TextBlock TextWrapping="Wrap" Text="Ответ на вопрос" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0"/>
        <TextBox x:Name="AnswerTextBox" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="480" Height="100"/>
    </Grid>
</Window>
